<div class="container">
  
  <%= render partial: 'layouts/flash' %>
  
  <div class="row mt-3">
    <h2>カテゴリ編集</h2>
  </div>
  
  <div class="row mt-1">
    <%= form_with model: @category, url: admin_category_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "カテゴリ名" %></th>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>
    </table>
      <div class="mt-3">
        <%= f.submit "変更を保存", class:"btn btn-success" %>
        <%= link_to "削除", admin_category_path, method: :delete, class: "btn btn-danger" %>
      </div>
    <% end %>
  </div>
  
</div>
