<div class="container">
  
  <div class="row mt-3">
    <h2>カテゴリ一覧</h2>
    <div class="nav-link">
      <%= link_to new_admin_category_path, class:"nav-link text-dark" do %>
        <i class="fas fa-plus-square"></i>
      <% end %>
    </div>
  </div>
  
  <div class="row mt-3">
    <table>
      <thead>
        <tr>
          <th>カテゴリ名</th>
          <th></th>
        </tr>
      </thead>
      <% @categories.each do |category| %>
      <tbody>
        <tr>
          <td><%= link_to category.name, edit_admin_category_path(category.id), class:"text-dark" %></td>
          <td></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  
</div>
