<div class="container">
  
  <%= render partial: 'layouts/flash' %>
  
  <div class="row mt-3">
    <h2>カテゴリ一覧</h2>
  </div>
  
  <div class="row mt-1">
    <table>
      <thead>
        <tr>
          <th>カテゴリ名</th>
          <th></th>
        </tr>
      </thead>
      <% @categories.each do |category| %>
      <tbody>
        <tr>
          <td><%= link_to category.name, edit_admin_category_path(category.id), class:"text-dark" %></td>
          <td></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  
  <div class="row mt-3">
    <h2>カテゴリ新規登録</h2>
  </div>
  
  <div class="row mt-1">
    <%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "カテゴリ名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="mt-3"><%= f.submit "保存", class:"btn btn-success" %></div>
    <% end %>
  </div>
  
</div>
