<div class="container">
  
  <div class="mx-auto mt-3" style="width: 300px;">
    <h2>カテゴリ新規登録</h2>
  </div>
  
  <div class="mx-auto mt-3">
    <%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "カテゴリ名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="mt-3"><%= f.submit "変更を保存", class:"btn btn-secondary" %></div>
    <% end %>
  </div>
  
</div>
