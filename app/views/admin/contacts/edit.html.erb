<div class="container">
  
  <div class="row mt-3">
  	<h2>お問い合せ返信</h2>
  </div>
  
  <div class="mt-3">
  	<%= form_for @contact, url: admin_contact_path do |f| %>
  	  <div class="contact-item">
  	  	名前: <%= @contact.user.name %>
  	  </div>
  	  <div class="contact-item">
  	    件名: <%= @contact.subject %>
  	  </div>
  	  <div class="contact-item">
  	    お問い合せ内容: <%= @contact.message %>
  	  </div>
  	  <div class="contact-item">
  	    受信日時: <%= @contact.created_at.strftime('%Y/%m/%d %H:%M') %>
  	  </div>
  	  <div class="contact-item mt-1">
  	  	返信内容: <%= f.text_area :reply, class:"form-control" %>
  	  </div>
  	  <div class="mt-3"><%= f.submit "送信" , class:"btn btn-success" %></div>
    <% end %>
  </div>
  
</div>
