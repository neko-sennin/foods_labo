<div class="container">
  
  <h2 class="contact-title mt-3">お問い合わせ一覧</h2>
  
  <div class="row mt-3">
  	<table>
  	  <thead>
  	  	<tr>
  	  	  <th>受信日時</th>
  	  	  <th>名前</th>
  	  	  <th>件名</th>
  	  	</tr>
  	  </thead>
  	  <tbody>
  	  	<% @contacts.each do |contact| %>
  	      <tr>
  	        <td><%= contact.created_at.strftime('%Y/%m/%d %H:%M') %></td>
  	      	<td><%= contact.user.name %></td>
	        <td><%= contact.subject %></td>
	        <td><%= link_to "返信", edit_admin_contact_path(contact), class:"btn btn-success" %></td>
	        <td><%= link_to "詳細", admin_contact_path(contact), class:"btn btn-primary" %></td>
	        <td><%= link_to "削除", admin_contact_path(contact), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"btn btn-danger" %></td>
  	      </tr>
  	    <% end %>
  	  </tbody>
    </table>
  </div>
</div>
