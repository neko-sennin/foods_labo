<div class="container">
  
  <div class="row mt-3">
    <h2>食材一覧</h2>
  </div>
  
  <div class="nav-link">
    <%= link_to new_admin_food_path, class:"nav-link text-dark" do %>
      <i class="fas fa-plus-square"></i>
    <% end %>
  </div>
  
  <div class="row mt-3">
    <table>
      <thead>
        <tr>
          <th>食材名</th>
          <th>成分</th>
        </tr>
      </thead>
      <% @foods.each do |food| %>
      <tbody>
        <tr>
          <td><%= link_to food.name, admin_food_path(food.id), class:"text-dark" %></td>
          <td><%= food.component %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  
</div>
