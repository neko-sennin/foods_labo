<div class="container">
  
  <div class="row mt-3">
    <h2>成分一覧</h2>
  </div>
  
  <div class="row mt-3">
    <table>
      <thead>
        <tr>
          <th>成分名</th>
          <th></th>
        </tr>
      </thead>
      <% @ingredients.each do |ingredient| %>
      <tbody>
        <tr>
          <td><%= link_to ingredient.name, edit_admin_ingredient_path(ingredient.id), class:"text-dark" %></td>
          <td></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  
  <div class="row mt-3">
    <h2>成分新規登録</h2>
  </div>
  
  <div class="row mt-3">
    <%= form_with model: @ingredient, url: admin_ingredients_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "成分名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="mt-3"><%= f.submit "保存", class:"btn btn-secondary" %></div>
    <% end %>
  </div>
  
</div>
