<div class="container">
  
  <div class="row mt-3">
    <h2>タグ編集</h2>
  </div>
  
  <div class="row mt-3">
    <%= form_with model: @tag, url: admin_tag_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "タグ名" %></th>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>
    </table>
      <div><%= f.submit "変更を保存", class:"btn btn-success" %></div>
    <% end %>
  </div>
  
</div>
