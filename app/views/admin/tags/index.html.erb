<div class="container">
  
  <div class="row mt-3">
    <h2>タグ一覧</h2>
  </div>
  
  <% if @tag.errors.any? %>
    <%= @tag.errors.count %>件のエラーが発生しました。
    <% @tag.errors.full_messages.each do |message| %>
      <%= message %>。
    <% end %>
  <% end %>
  
  <div class="row mt-3">
    <table>
      <thead>
        <tr>
          <th>タグ名</th>
          <th></th>
        </tr>
      </thead>
      <% @tags.each do |tag| %>
      <tbody>
        <tr>
          <td><%= link_to tag.name, edit_admin_tag_path(tag.id), class:"text-dark" %></td>
          <td></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
  <div class="row mt-3">
    <h2>タグ新規登録</h2>
  </div>
  
  <div class="row mt-3">
    <%= form_with model: @tag, url: admin_tags_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "タグ名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="my-3"><%= f.submit "保存", class:"btn btn-secondary" %></div>
    <% end %>
  </div>
  
</div>
