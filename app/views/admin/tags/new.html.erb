<div class="container">
  
  <div class="mx-auto mt-3" style="width: 200px;">
    <h2>タグ新規登録</h2>
  </div>
  
  <div class="mx-auto mt-3">
    <%= form_with model: @tag, url: admin_tags_path, local: true do |f| %>
    <table>
      <tr>
        <th><%= f.label "タグ名" %></th>
        <td><%= f.text_field :name %></td>
      </tr>
    </table>
    <div class="my-3"><%= f.submit "変更を保存", class:"btn btn-secondary" %></div>
    <% end %>
  </div>
  
</div>
