<div class="container">
  
  <div class="row my-4">
    <h2><%= @user.name %>さんの会員情報編集</h2>
  </div>
  
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label "名前" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "性別" %>
    <%= f.radio_button :gender, 0, checked: true %>未設定
    <%= f.radio_button :gender, 1 %>男性
    <%= f.radio_button :gender, 2 %>女性
    <%= f.radio_button :gender, 3 %>その他
  </div>
  <div class="field">
    <%= f.label "年齢" %>
    <%= f.select :age,  [ ["未設定", "unentered"] , ["10代", "teens"],  ["20代", "twenties"],  ["30代", "thirties"], ["40代", "forties"], ["50代", "fifties"], ["60代", "sixties"], ["70代", "seventies"],  ["80代", "eighties"] ]  %>
  </div>
  <div class="field">
    <%= f.label "自己紹介" %>
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "会員ステータス" %>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "有効", value: :false %>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "退会", value: :true %>
  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
  </div>
  <% end %>
  
</div>
