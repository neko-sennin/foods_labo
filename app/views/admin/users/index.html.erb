<div class="container">
  
  <div class="row mt-3">
    <h2>会員一覧</h2>
  </div>
  
  <div class="row mt-3">
    <table>
      <thead>
        <tr>
          <th>会員ID</th>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%= user.id %></td>
          <td><%= link_to user.name, admin_user_path(user.id) %></td>
          <td><%= user.email %></td>
          <td>
            <% if user.is_active %>
              <div class="text-secondary">退会</div>
            <% else %>
              <div class="text-success">有効</div>
            <% end %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class="row mx-auto mb-5"><%= paginate @users %></div>
  </div>
  
</div>
