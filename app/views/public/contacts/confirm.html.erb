<div class="container">
  
  <div class="row mt-3">
    <table>
      <tbody>
        <tr>
          <td class="text-center">お名前</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td class="text-center">メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td class="text-center" style="width: 50%;">タイトル</td>
          <td><%= @contact.subject %></td>
        </tr>
        <tr>
          <td class="text-center">メッセージ</td>
          <td style="white-space: pre-wrap;"><%= @contact.message %></td>
        </tr>
      </tbody>
    </table>
  </div>

  <%= form_for(@contact) do |f| %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div><%= f.submit '送信' %></div>
  <% end %>
  
  <%= form_for @contact, url: back_path do |f| %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div><%= f.submit '入力画面に戻る' %></div>
  <% end %>
  
</div>
