<div class="container">
  
  <h2 class="contact-title mt-3">お問い合わせフォーム</h2>
  
  <div class="mt-3">
    <div class="contact-item">名前: <%= current_user.name %></div>
    <div class="contact-item">メールアドレス: <%= current_user.email %></div>
    <div class="contact-item">件名: <%= @contact.subject %></div>
    <div class="contact-item">お問い合せ内容: <%= @contact.message %></div>
    <div class="mt-3">
      <%= form_for @contact, url: back_path do |f| %>
        <%= f.hidden_field :user_id, value:current_user.id %>
        <%= f.hidden_field :subject %>
        <%= f.hidden_field :message %>
        <%= f.submit '入力画面に戻る', class: "btn btn-primary"  %>
      <% end %>
    </div>
    <div class="mt-3">
    <%= form_for(@contact) do |f| %>
      <%= f.hidden_field :user_id, value:current_user.id %>
      <%= f.hidden_field :subject %>
      <%= f.hidden_field :message %>
      <%= f.submit '送信', class: "btn btn-success"  %>
    <% end %>
    </div>
  </div>
  
</div>
