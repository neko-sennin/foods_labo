<div class="container">
  
  <%= render partial: 'layouts/flash' %>
  
  <h2 class="contact-title mt-3">お問い合わせフォーム</h2>
  
  <div class="row mt-3">
    <table>
      <tbody>
        <tr>
          <td class="text-center">名前</td>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <td class="text-center">メールアドレス</td>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td class="text-center" style="width: 50%;">件名</td>
          <td><%= @contact.subject %></td>
        </tr>
        <tr>
          <td class="text-center">お問い合わせ内容</td>
          <td style="white-space: pre-wrap;"><%= @contact.message %></td>
        </tr>
      </tbody>
    </table>
  </div>
  
  <%= form_for @contact, url: back_path do |f| %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div class="my-3"><%= f.submit '入力画面に戻る', class: "btn btn-primary"  %></div>
  <% end %>
  
  <%= form_for(@contact) do |f| %>
    <%= f.hidden_field :user_id, value:current_user.id %>
    <%= f.hidden_field :subject %>
    <%= f.hidden_field :message %>
    <div><%= f.submit '送信', class: "btn btn-success"  %></div>
  <% end %>
  
</div>
