<div class="container">
  
  <h2 class="contact-title mt-3">お問い合せフォーム</h2>
  
  <div class="mt-3">
    <div class="contact-item">名前: <%= current_user.name %></div>
    <div class="contact-item">メールアドレス: <%= current_user.email %></div>
    <%= form_for @contact, url: confirm_path do |f| %>
      <%= f.hidden_field :user_id, value:current_user.id %>
      <div class="contact-item">
        <%= f.label :件名 %>
        <%= f.text_field :subject, class:"form-control" %>
      </div>
      <div class="contact-item">
        <%= f.label :お問い合せ内容 %>
        <%= f.text_area :message, class:"form-control" %>
      </div>
      <div class="mt-3"><%= f.submit "入力内容確認", class: "btn btn-success"  %></div>
    <% end %>
  </div>
  
</div>
