<% if review.liked_by?(current_user) %>
  <%= link_to likes_path(review_id: review), method: :delete, class: "like-btn" do %>
    <i class="fas fa-heart liked"></i>
    <%= review.likes.count %>
  <% end %>
<% else %>
  <%= link_to likes_path(review_id: review), method: :post, class: "like-btn" do %>
    <i class="far fa-heart"></i>
    <%= review.likes.count %>
  <% end %>
<% end %>
