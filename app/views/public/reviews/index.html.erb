<div class="container">
  
  <div class="mx-auto mt-3">
    <%= render "search", review: @review %>
  </div>
  
  <div class="row">
    <h2>投稿一覧</h2>
  </div>
  
  <% @reviews.each do |review| %>
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <%= image_tag review.user.get_image(100,100), class:"mt-3 rounded-circle"; %>
        </div>
        <div class="col-10">
          <p class="card-title">
            <%= link_to(review_path(review.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= review.title %></span></strong>
            <% end %>
          </p>
          <p><%= review.food.name %></p>
          <p class="card-text"><%= review.comment %></p>
          <span><i class="fas fa-user"></i><%= review.user.name %></span>
          <% if current_user.likes.exists?(review_id: review.id) %>
            <%= link_to delete_like_path(review.id), method: :delete, class: "like-btn" do %>
              <i class="fas fa-heart liked"></i>
            <% end %>
          <% else %>
            <%= link_to like_path(review.id), method: :post, class: "like-btn" do %>
              <i class="far fa-heart"></i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @reviews %>
  
</div>
