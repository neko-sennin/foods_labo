<div class="container">
  
  <div class="row mt-3">
    <h2><%= review.food.id.name %>に関する投稿一覧</h2>
  </div>
  
  <% if @review_list.present? %>
    <% @review_list.each do |review| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <div class="card-body">
        <div class="row">
          <div class="col-2">
            <%= image_tag review.user.get_image(100,100), class:"mt-3 rounded-circle"; %>
          </div>
          <div class="col-10">
            <p class="card-title">
              <%= link_to(review_path(review.id), class:"text-dark") do %>
                <strong><i class="far fa-flag"></i><span> <%= review.title %></span></strong>
              <% end %>
            </p>
            <p><%= review.food.name %></p>
            <p class="card-text"><%= review.comment %></p>
           <span><i class="fas fa-user"></i><%= review.user.name %></span>
            <%= render "public/reviews/likes", review: review %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  
</div>
