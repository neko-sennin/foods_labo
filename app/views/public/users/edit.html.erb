<div class="container">
    
  <div class="row my-3">
    <h2>会員情報編集</h2>
  </div>
  
  <%= form_with model: @user,url: users_path,method: :patch do |f| %>
  <div class="field">
    <%= f.label "名前" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  
  <div class="actions">
    <%= f.submit "編集内容を保存" %>
    <%= link_to "退会する", users_check_path %>
  </div>
  <% end %>
  
</div>
