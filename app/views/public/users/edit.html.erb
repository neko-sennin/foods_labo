<div class="container">
    
  <div class="row mt-3">
    <h2>会員情報編集</h2>
  </div>
  
  <%= form_with model: @user,url: users_path, method: :patch do |f| %>
  <div class="field">
    <%= f.label "写真" %>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="field">
    <%= f.label "名前" %>
    <%= f.text_field :name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label "性別" %>
    <%= f.radio_button :gender, :unentered, checked: true %>未設定
    <%= f.radio_button :gender, :male %>男性
    <%= f.radio_button :gender, :female %>女性
    <%= f.radio_button :gender, :other %>その他
  </div>
  <div class="field">
    <%= f.label "年齢" %>
    <%= f.select :age,  [ ["未設定", "unentered"] , ["10代", "teens"],  ["20代", "twenties"],  ["30代", "thirties"], ["40代", "forties"], ["50代", "fifties"], ["60代", "sixties"], ["70代", "seventies"],  ["80代", "eighties"] ]  %>
  </div>
  <div class="field">
    <%= f.label "自己紹介" %>
    <%= f.text_area :introduction, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "編集内容を保存", class:"btn btn-success" %>
  </div>
  <% end %>
  
  <div class="row mt-3 ml-1">
    <div>
      ※ 退会を希望の方は<%= link_to "こちら", users_check_path %>からお手続きください。
    </div>
  </div>
  
</div>
