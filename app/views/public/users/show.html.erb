<div class="container">
  
  <div class="row mt-3">
    <h2>マイページ</h2>
  </div>
  
  <div class="row">
    <table>
      <tr>
        <%= image_tag @user.get_image(150,150) %>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>性別</th>
        <td><%= @user.gender_i18n %></td>
      </tr>
      <tr>
        <th>年齢</th>
        <td><%= @user.age_i18n %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
  </div>
  <%= link_to "編集する", edit_users_path, class: "btn btn-success" %>
  <%= link_to "戻る", root_path, class: "btn btn-primary" %>
  
</div>
