<div class="container">
  
  <div class="row my-3">
    <h2>マイページ</h2>
  </div>
  
  <div class="row my-3">
    <%= link_to "編集する", edit_users_path %>
  </div>
  
  <div class="row">
    <table>
      <tr>
        <%= image_tag @user.get_image(150,150) %>
      </tr>
      <tr>
        <th>名前</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th>性別</th>
        <td><%= @user.gender_method_i18n %></td>
      </tr>
      <tr>
        <th>年齢</th>
        <td><%= @user.age_method_i18n %></td>
      </tr>
      <tr>
        <th>自己紹介</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
  </div>
  
</div>
